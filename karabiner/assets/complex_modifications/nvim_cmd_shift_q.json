
{
  "title": "Cmd+Shift+Q = :wq in Neovim (Kitty only)",
  "rules": [
    {
      "description": "Cmd+Shift+Q sends :wq<Enter> in Neovim",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "q",
            "modifiers": {
              "mandatory": ["command", "shift"]
            }
          },
          "to": [
            { "key_code": "escape" },
            { "key_code": "semicolon", "modifiers": ["shift"] },
            { "key_code": "w" },
            { "key_code": "q" },
            { "key_code": "return_or_enter" }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "net.kovidgoyal.kitty"
              ]
            }
          ]
        }
      ]
    }
  ]
}
